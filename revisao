    <script>
        function revelarResposta(id) {
            const elemento = document.getElementById('resposta-' + id);
            const botao = document.getElementById('btn-' + id);
            const opcaoCorreta = document.getElementById('opcao-correta-' + id);
            
            if (elemento && botao) {
                elemento.classList.remove('resposta-oculta');
                elemento.classList.add('resposta-visivel');
                botao.style.display = 'none';
            }
            
            if (opcaoCorreta) {
                opcaoCorreta.classList.add('correta-revelada');
            }
        }
        
        function ocultarResposta(id) {
            const elemento = document.getElementById('resposta-' + id);
            const botao = document.getElementById('btn-' + id);
            const opcaoCorreta = document.getElementById('opcao-correta-' + id);
            
            if (elemento && botao) {
                elemento.classList.add('resposta-oculta');
                elemento.classList.remove('resposta-visivel');
                botao.style.display = 'inline-block';
            }
            
            if (opcaoCorreta) {
                opcaoCorreta.classList.remove('correta-revelada');
            }
        }
        
        function revelarTodas() {
            const respostas = document.querySelectorAll('[id^="resposta-"]');
            const botoes = document.querySelectorAll('[id^="btn-"]');
            const opcoesCorretas = document.querySelectorAll('[id^="opcao-correta-"]');
            
            respostas.forEach(r => {
                r.classList.remove('resposta-oculta');
                r.classList.add('resposta-visivel');
            });
            botoes.forEach(b => {
                b.style.display = 'none';
            });
            opcoesCorretas.forEach(o => {
                o.classList.add('correta-revelada');
            });
        }
        
        function ocultarTodas() {
            const respostas = document.querySelectorAll('[id^="resposta-"]');
            const botoes = document.querySelectorAll('[id^="btn-"]');
            const opcoesCorretas = document.querySelectorAll('[id^="opcao-correta-"]');
            
            respostas.forEach(r => {
                r.classList.add('resposta-oculta');
                r.classList.remove('resposta-visivel');
            });
            botoes.forEach(b => {
                b.style.display = 'inline-block';
            });
            opcoesCorretas.forEach(o => {
                o.classList.remove('correta-revelada');
            });
        }
    </script>
